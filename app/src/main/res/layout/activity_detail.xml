<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    app:columnCount="2"
    app:rowCount="10"
    tools:context="com.example.eugene.moviesearchengine.DetailActivity">

    <ImageView
        android:id="@+id/detail_poster"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_columnWeight="1"
        app:layout_gravity="top"
        android:padding="@dimen/movie_margin"
        app:layout_rowSpan="6" />

    <TextView
        android:id="@+id/detail_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_row="0"
        app:layout_column="1"
        app:layout_columnWeight="1"
        android:padding="@dimen/movie_margin"
        android:textSize="12sp"
        android:fontFamily="sans-serif"
        />

    <TextView
        android:id="@+id/detail_year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_row="1"
        app:layout_column="1"
        app:layout_columnWeight="1"
        android:padding="@dimen/movie_margin"
        android:textSize="12sp"
        android:fontFamily="sans-serif"
        />

    <TextView
        android:id="@+id/detail_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_row="2"
        app:layout_column="1"
        app:layout_columnWeight="1"
        android:padding="@dimen/movie_margin"
        android:textSize="12sp"
        android:fontFamily="sans-serif"
        />

    <TextView
        android:id="@+id/detail_director"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_row="3"
        app:layout_column="1"
        app:layout_columnWeight="1"
        android:padding="@dimen/movie_margin"
        android:textSize="12sp"
        android:fontFamily="sans-serif"/>

    <TextView
        android:id="@+id/detail_actors"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_row="4"
        app:layout_column="1"
        app:layout_columnWeight="1"
        android:padding="@dimen/movie_margin"
        android:textSize="12sp"
        android:fontFamily="sans-serif"/>

    <TextView
        android:id="@+id/detail_writer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_row="5"
        app:layout_column="1"
        app:layout_columnWeight="1"
        android:padding="@dimen/movie_margin"
        android:textSize="12sp"
        android:fontFamily="sans-serif"/>

    <TextView
        android:id="@+id/detail_country"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_row="6"
        app:layout_column="1"
        app:layout_columnWeight="1"
        android:padding="@dimen/movie_margin"
        android:textSize="12sp"
        android:fontFamily="sans-serif"/>

    <TextView
        android:id="@+id/detail_imdbRating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_row="7"
        app:layout_column="1"
        app:layout_columnWeight="1"
        android:padding="@dimen/movie_margin"
        android:textSize="12sp"
        android:fontFamily="sans-serif"/>

    <TextView
        android:id="@+id/detail_imdbVotes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_row="8"
        app:layout_column="1"
        app:layout_columnWeight="1"
        android:padding="@dimen/movie_margin"
        android:textSize="12sp"
        android:fontFamily="sans-serif"/>

    <Button
        android:id="@+id/add_to_favorites"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_columnWeight="1"
        app:layout_row="6"
        app:layout_column="0"
        android:padding="@dimen/movie_margin"
        android:textSize="12sp"
        android:fontFamily="sans-serif"
        android:text="@string/add_to_favorites_button"/>

</android.support.v7.widget.GridLayout>
